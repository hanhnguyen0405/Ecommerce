@model Ecommerce.Models.ProductVM

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<h4>Product Information</h4>
<hr />
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="white-space:nowrap">
                    <label asp-for="Name" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="Name" class="form-control col-md-9" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProductCategory, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model =>model.ProductCategory.Id, new SelectList((IEnumerable<ProductCategoryVM>)ViewData["ProductCategories"],"Id","Name"),
                                                                           "Select Category", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductCategory, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="Price.UnitPrice" class="form-control" />
                        <span asp-validation-for="Price.UnitPrice" class="text-danger"></span>
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default " />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
